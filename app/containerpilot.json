{
  "consul": "{{.CONSUL}}:8500",
  "logging": {
    "level": "INFO",
    "format": "default",
    "output": "stdout"
  },
  "services": [
    {
      "name": "api",
      "port": "{{.PORT}}",
      "poll": 3,
      "ttl": 10,
      "health": "/usr/bin/curl --fail -H 'X-User-Roles: admin' -s http://localhost:{{.PORT}}/health"
    }
  ],
  "backends": [
    {
      "name": "rabbitmq",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    },
    {
      "name": "database",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    }
  ]
}
