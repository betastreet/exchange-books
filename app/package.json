    "jest": "^16.0.2",
    "nodemon": "^1.11.0",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "bookshelf": "^0.10.2",
    "bookshelf-modelbase": "^2.10.2",
    "bookshelf-multi-mask": "^0.0.3",
    "bookshelf-paranoia": "^0.9.0",
    "bookshelf-prefixed-ordered-uuid": "^1.1.3",
